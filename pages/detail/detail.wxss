/* pages/detail/detail.wxss */

.main {
  padding: 10rpx;
}

.video_info {
  margin-top: 10rpx;
}

.video_info video {
  width: 100%;
}

.video_title {
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
}

.video_detail {
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #666;
}

.video_detail text {
  margin-left: 12rpx;
}

.video_detail .author {
  color: #000;
}

.other-list {
  margin-top: 10rpx;
}

.item-other {
  display: flex;
  margin-bottom: 20rpx;
}

.other-img-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
}

.other-img-wrap image {
  border-radius: 15rpx;
}

.other-info {
  display: flex;
  /*列方向上下对齐*/
  flex-direction: column;
  justify-content: space-around;
  width: 60%;
  margin-left: 50rpx;
}

.other-title {
  font-size: 30rpx;
  color: #e06f93;
}

.other-detail {
  font-size: 26rpx;
  color: #666;
}

.comment-wrap {
  margin-top: 10rpx;
}

.comment-title {
  padding: 10rpx;
  font-size: 28rpx;
}

.comment-item {
  height: 190rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  padding: 10rpx;
  border-bottom: 1px solid #666;
}

.comment-user {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.comment-user image {
  width: 60%;
  border-radius: 50%;
}

.comment-info {
  display: flex;
  flex: 5;
  flex-direction: column;
  justify-content: space-around;
}

.comment-detail {
  display: flex;
  justify-content: space-between;
}

.comment-detail .author {
  font-size: 28rpx;
  color: #000;
}

.comment-detail .date {
  font-size: 24rpx;
  color: #666;
}

.comment-content {
  font-size: 28rpx;
  color: #99a2aa;
}