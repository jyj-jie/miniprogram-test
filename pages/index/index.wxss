page {
  color: #666;
  padding: 10rpx;
}

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}

.nav-item {
  display: inline-block;
  padding: 20rpx 44rpx;
  font-size: 30rpx;
}

.active {
  border-bottom: 5rpx solid #de688b;
}

.slides {
  margin-top: 10rpx;
}

.slides swiper {
  height: 220rpx;
}

.slides navigator {
  width: 100%;
  height: 100%;
}

.slides image {
  width: 100%;
  height: 100%;
}

/* 视频列表 */
.video_wrap{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}

.video_item{
  width: 48%;
  margin-bottom: 20rpx;
}

.video_img{
  position: relative;
}

.video_img image{
  width: 100%;
  border-radius: 15rpx;
}

.video_img .video_info{
  position: absolute;
  bottom: 15rpx;
  left: 0;
  color: #fff;
  font-size: 25rpx;
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.video_title{
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.fa{
  margin-right: 5rpx;
}